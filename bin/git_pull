#!/bin/bash

PROJECT_PATH=''
BRANCH=''
if [ "$1" == "" ] ; then
  echo "<git project> [branch]"
  exit
else
  PROJECT_PATH=$1
fi
if [ "$2" == "" ] ; then
  BRANCH='master'
else
  BRANCH=$2
fi
cd $PROJECT_PATH
git checkout -- .
git clean -df
git checkout $BRANCH
git checkout -- .
git clean -df
git pull
