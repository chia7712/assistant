#!/bin/bash

nodes=()

# Read the file in parameter and fill the array named "array"
getArray() {
    i=0
    while read line # Read a line
    do
        nodes[i]=$line # Put it into the array
        i=$(($i + 1))
    done < $1
}

getArray "hosts"
SSH_CMD='ssh -p 12280'
SCP_CMD='scp -P 12280'
if [ "$1" == "run_bg" ] && [ "$2" != "" ] ; then
  echo "[WARNING] The command will run in background and all output are redirected to /dev/null"
  for node in ${nodes[@]}
  do
    echo "Run $2 on the $node"
    $SSH_CMD $node $2 > /dev/null &
  done
  exit
fi
if [ "$1" == "run_bg_print" ] && [ "$2" != "" ] ; then
  echo "[WARNING] The command will run in background"
  for node in ${nodes[@]}
  do
    echo "Run $2 on the $node"
    $SSH_CMD $node $2 &
  done
  exit
fi
if [ "$1" == "run" ] && [ "$2" != "" ] ; then
  for node in ${nodes[@]}
  do
    echo $node
    $SSH_CMD $node $2
  done
  exit
fi
if [ "$1" == "reboot" ];then
  for node in ${nodes[@]}
  do
    echo $node will reboot
    $SSH_CMD $node '/usr/sbin/reboot'
  done
  exit
fi

if [ "$1" == "ntpdate" ];then
  for node in ${nodes[@]}
  do
    echo $node will ntpdate
    $SSH_CMD $node 'ntpdate time.stdtime.gov.tw' &
  done
  ntpdate time.stdtime.gov.tw
  exit
fi
src_path=()
dst_path=""
if [ $1 == "copy" ] && [ $# -gt 3 ];then
  shift 1
  i=0
  while [ -n "$1" ]
  do
    if [ $1 == "to" ];then
      shift 1
      dst_path=$1
      break
    else
      src_path[i]=$1
      i=$(($i+1))	
      shift	
    fi
  done
  if [ "$dst_path" == "" ];then
    exit
  fi
  for src in ${src_path[@]}
  do
    for node in ${nodes[@]}
    do
      echo $node
      $SCP_CMD -r $src $node:$dst_path
    done
  done
fi
